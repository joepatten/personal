\makeatletter
\renewcommand{\todo}[2][]{%
    \@todo[caption={#2}, #1]{\begin{spacing}{0.5}#2\end{spacing}}%
} 
\makeatother 

%Define Colors
\definecolor{err_red}{RGB}{240,170,170}
\definecolor{com_blue}{RGB}{160,200,255}
\definecolor{ins_green}{RGB}{170,240,170}

%Define Highlights
\newcommand{\hlred}[2][err_red]{{\sethlcolor{#1}\hl{#2}}}
\newcommand{\hlblue}[2][com_blue]{{\sethlcolor{#1}\hl{#2}}}

%Define TODO Commands
\newcommand{\hlfix}[2]{\hlred{#1} \todo[size=\small, color=err_red]{#2}}
\newcommand{\hlcom}[2]{\hlblue{#1} \todo[size=\small, color=com_blue]{#2}}
\newcommand{\insblock}[2]{\todo[inline, color=ins_green]{\textbf{#1:} #2}}


